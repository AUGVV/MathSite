@page
@model MathSite.Areas.Identity.Pages.Account.Manage.YouTasksModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<link rel="stylesheet" type="text/css" href="/css/ConditionStyle.css">
<form id="Create" method="post">
    <button id="create-task" asp-route-PageAct="CreateTask" type="submit" class="btn btn-primary btn-create">@Localizer["CreateNew"]</button><br>
</form>
<form method="get">
    <label class="control-label">Тема:</label><select name="Search" asp-items="Model.MathTheme"></select><button type="submit" class="btn btn-primary btn-filter">@Localizer["Найти"]</button>
</form>
    <form id="Create" method="post">
        <table class="table">
            <tr>
                <th><a asp-route-Sort="@ViewBag.TaskName" asp-route-Search=@ViewData["SearchSave"]>@Localizer["TaskName"]</a></th>
                <th><a asp-route-Sort="@ViewBag.Condition" asp-route-Search=@ViewData["SearchSave"]>@Localizer["Condition"]</a></th>
                <th><a asp-route-Sort="@ViewBag.Rating" asp-route-Search=@ViewData["SearchSave"]>@Localizer["Raiting"]</a></th>
            </tr>
            @foreach (var item in Model.Tasks)
            {
                <tr>
                    <td>@item.TaskName</td>
                    <td class="condition-list">@item.Condition</td>
                    <td>@item.Rating</td>
                    <td><Button type="submit" asp-route-PageAct="ShowTask" asp-route-ChoisedId=@item.Id class="btn btn-primary">@Localizer["View"]</Button></td>
                    <td><Button type="submit" asp-route-PageAct="EditTask" asp-route-ChoisedId=@item.Id class="btn btn-primary">@Localizer["Edit"]</Button></td>
                    <td><Button type="submit" asp-route-PageAct="DeleteTask" asp-route-ChoisedId=@item.Id asp-route-Search=@ViewData["SearchSave"] asp-route-Sort=@ViewData["SortSave"] class="btn btn-primary">@Localizer["Delete"]</Button></td>
                </tr>
            }
        </table>
    </form>


